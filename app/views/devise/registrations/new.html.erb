<div class="max-w-7xl mx-auto mx-8">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h1 class="mt-12 text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl text-red-600">Sign Up</h1>

    <div class="field text-lg font-bold mb-4 mt-12 max-w-2xl">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"border-2 border-red-200 rounded-md w-full" %>
    </div>

 


 <div class="field text-lg font-bold mb-4 mt-4 max-w-2xl">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <span class="text-xs">(<%= @minimum_password_length %> characters minimum)</span>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"border-2 border-red-200 rounded-md w-full" %>
  </div>

  <div class="field text-lg font-bold mb-4 mt-4 max-w-2xl">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"border-2 border-red-200 rounded-md w-full" %>
  </div>


  <div class="actions bg-red-400 rounded-md flex items-center justify-center my-4 max-w-sm">
      <div class="py-2 px-4 text-white cursor-pointer ">
      <%= f.submit "Sign up" %>
      </div>
    </div>
<% end %>
<%# 
<%= render "devise/shared/links" %>
</div>